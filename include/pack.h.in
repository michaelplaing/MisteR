#ifndef PACK_H
#define PACK_H

#include "mister.h"

#include <Judy.h>

#ifdef __cplusplus
//extern "C" {
#endif /* __cplusplus */

struct connect_hv;

struct pack_ctx;

typedef struct connect_hv {
    char *name;
    int (*pack_fn)(struct pack_ctx *pctx, struct connect_hv *chv);
    Word_t value; /* can handle each header_var value including pointers */
    size_t bitpos; // for sub-byte values
    size_t len; // for sub-byte values, pointer values & VBIs
    bool exists; // for properties
    uint8_t id; // for properties
} connect_hv;

typedef struct pack_ctx {
    uint8_t *buf;
    size_t pos;
    size_t propcnt;
    size_t len;
    connect_hv *connect_hvs;
    size_t hv_count;
    Pvoid_t PJSLArray;
} pack_ctx;

pack_ctx *init_pack_context(size_t bufsize);

int set_header_value(pack_ctx *pctx, char *name, Word_t value);

int pack_connect_buffer(pack_ctx *pctx);

int pack_uint8(pack_ctx *pctx, connect_hv *chv);

int pack_uint16(pack_ctx *pctx, connect_hv *chv);

int pack_uint32(pack_ctx *pctx, connect_hv *chv);

int pack_prop_uint32(pack_ctx *pctx, connect_hv *chv);

int pack_VBI(pack_ctx *pctx, connect_hv *chv);

int pack_buffer(pack_ctx *pctx, connect_hv *chv);

int pack_bits_in_uint8(pack_ctx *pctx, connect_hv *chv);

#ifdef __cpluplus
//}
#endif /* __cplusplus */

#endif /* PACK_H */
